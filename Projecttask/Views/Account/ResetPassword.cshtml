@model Projecttask.Models.ViewModels.ResetPasswordViewModel

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger" role="alert">
        @foreach (var key in ViewData.ModelState.Keys)
        {
            foreach (var error in ViewData.ModelState[key].Errors)
            {
                <span>@error.ErrorMessage</span>

                <br />
            }
        }
    </div>
}

<form asp-controller="Account" asp-action="ResetPass" method="post">
    <input type="hidden" asp-for="Email" />
    <input type="hidden" asp-for="Token" />
    <div class="form-group">
        <label for="Password">Password</label>
        <input type="password" class="form-control" id="Password" name="Password" asp-for="Password" required>
    </div>
    <div class="form-group">
        <label for="ConfirmPassword">Confirm Password</label>
        <input type="password" class="form-control" id="ConfirmPassword" asp-for="ConfirmPassword" name="ConfirmPassword" required>
    </div>
    <button type="submit" class="btn btn-primary">Reset Password</button>
</form>