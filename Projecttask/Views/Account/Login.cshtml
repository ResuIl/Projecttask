@model Projecttask.Models.ViewModels.LoginViewModel

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger" role="alert">
        @foreach (var key in ViewData.ModelState.Keys)
        {
            foreach (var error in ViewData.ModelState[key].Errors)
            {
                <span>@error.ErrorMessage</span>

                <br />
            }
        }
    </div>
}
<style>
    a {
        text-decoration: none;
    }
</style>
<div class="container d-flex align-items-center py-4">
    <main class="form-signin w-100 m-auto">
     <form asp-action="Login" method="post">
        <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

        <div class="form-floating">
            <input type="email" class="form-control" id="Email" name="Email" required>
            <label for="floatingInput">Email address</label>
        </div>
        <div class="form-floating">
            <input type="password" class="form-control" id="Password" name="Password" required>
            <label for="floatingPassword">Password</label>
        </div>
        <div class="row">
            <div class="col">
                <div class="form-check text-start my-3">
                    <input class="form-check-input" type="checkbox" id="RememberMe" name="RememberMe">
                    <label class="form-check-label" for="flexCheckDefault">
                        Remember me
                    </label>
                </div>
            </div>
                <div class="col">
                    <div class="form-check text-end my-3">
                        <a href="@Url.Action("ForgotPassword", "Account", new { email = Model?.Email})">Forgot password?</a>
                        <a href="@Url.Action("Register", "Account")">Register</a>
                    </div>
                </div>
        </div>


        <button class="btn btn-primary w-100 py-2" type="submit">Sign in</button>
    </form>
</main>
</div>
