@model Projecttask.Models.ViewModels.AddCategoryViewModel

<h2>Add Category</h2>

<form asp-action="AddCategorie" method="post">
    <div class="form-group">
        <label for="CategoryName" class="control-label"></label>
        <input for="CategoryName" class="form-control" id="CategoryName" name="CategoryName" required />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Add Category</button>
    </div>
</form>

